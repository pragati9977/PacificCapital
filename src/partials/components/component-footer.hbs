<footer>
    <!-- footer content begin -->
    <div class="uk-section">
        <div class="uk-container uk-margin-top">
            <div class="uk-grid">
                <div class="uk-width-2-3@m">
                    {{{footer.blocks.[0].data.text}}}
                </div>
                <div class="uk-width-1-3@m uk-flex uk-flex-right uk-flex-center@s">
                    <ul class="uk-list uk-link-text in-footer-socials">
                        {{#if setting.socialMedia.facebook}}<li><a href="{{setting.socialMedia.facebook}}" class="fb-bg"><i class="fab fa-facebook-square"></i>Facebook</a></li>{{/if}}
                        {{#if setting.socialMedia.twitter}}<li><a href="{{setting.socialMedia.twitter}}" class="tw-bg"><i class="fab fa-twitter"></i>Twitter</a></li>{{/if}}
                        {{#if setting.socialMedia.youtube}}<li><a href="{{setting.socialMedia.youtube}}" class="yt-bg"><i class="fab fa-youtube"></i>Youtube</a></li>{{/if}}
                        {{#if setting.socialMedia.instagram}}<li><a href="{{setting.socialMedia.instagram}}" class="ig-bg"><i class="fab fa-instagram"></i>Instagram</a></li>{{/if}}
                        {{#if setting.socialMedia.telegram}}<li><a href="{{setting.socialMedia.telegram}}" class="tl-bg"><i class="fab fa-telegram-plane"></i>Telegram</a></li>{{/if}}
                        {{#if setting.socialMedia.whatsapp}}<li><a href="{{setting.socialMedia.whatsapp}}" class="wa-bg"><i class="fab fa-whatsapp"></i>Whatsapp</a></li>{{/if}}
                        {{#if setting.socialMedia.linkedin}}<li><a href="{{setting.socialMedia.linkedin}}" class="ld-bg"><i class="fab fa-linkedin"></i>Linkedin</a></li>{{/if}}
                        {{#if setting.socialMedia.behance}}<li><a href="{{setting.socialMedia.behance}}" class="be-bg"><i class="fab fa-behance"></i>Behance</a></li>{{/if}}
                    </ul>
                </div>
            </div>
        </div>
        <hr class="uk-margin-large">
        <div class="uk-container">
            <div class="uk-grid uk-flex uk-flex-middle">
                <div class="uk-width-2-3@m uk-text-small">
                    {{#if setting.footer.footerLink.enabled}}
                    <ul class="uk-subnav uk-subnav-divider uk-visible@s" data-uk-margin>
                        {{#each setting.footer.footerLink.link }}
                        {{#if title}}<li><a href="{{url}}">{{title}}</a></li>{{/if}}
                        {{/each}}
                    </ul>
                    {{/if}}
                    <p class="copyright-text">{{setting.footer.copyrightText}}</p>
                </div>
                <div class="uk-width-1-3@m uk-flex uk-flex-right uk-visible@m">
                    {{#if setting.footer.paymentLogo.enabled}}
                    <span class="uk-margin-right"><img src="{{root}}img/in-lazy.gif" data-src="{{root}}{{setting.footer.paymentLogo.logo.[0].src}}" alt="footer-payment" width="{{setting.footer.paymentLogo.logo.[0].width}}" height="{{setting.footer.paymentLogo.logo.[0].height}}" data-uk-img></span>
                    <span><img src="{{root}}img/in-lazy.gif" data-src="{{root}}{{setting.footer.paymentLogo.logo.[1].src}}" alt="footer-payment" width="{{setting.footer.paymentLogo.logo.[1].width}}" height="{{setting.footer.paymentLogo.logo.[1].height}}" data-uk-img></span>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
    <!-- footer content end -->
    {{> module-totop }}
</footer>
